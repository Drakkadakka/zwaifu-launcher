                proc = instance.get('proc')
                if proc and proc.poll() is None:
                    try:
                        proc.kill()
                        self.log(f"Killed {process_type} instance (PID {proc.pid})")
                        killed_count += 1
                    except Exception as e:
                        self.log(f"Error killing {process_type} instance: {e}")
