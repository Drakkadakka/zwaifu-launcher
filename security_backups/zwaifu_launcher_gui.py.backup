        try:
            content = self.cmd_flags_text.get('1.0', tk.END)
            
            # Ensure directory exists
            os.makedirs(os.path.dirname(CMD_FLAGS_FILE), exist_ok=True)
            
            with open(CMD_FLAGS_FILE, 'w', encoding='utf-8') as f:
