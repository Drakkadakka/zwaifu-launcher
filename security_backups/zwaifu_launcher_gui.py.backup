            self.cmd_flags_status_var.set(f"Saved: {CMD_FLAGS_FILE}")
            self.log(f"[CMD Flags] Saved file: {CMD_FLAGS_FILE}")
            messagebox.showinfo("Success", "CMD_FLAGS.txt has been saved successfully!")
